@{
    ViewData["Title"] = "Dashboard";
}


<div class="container mt-4">

    <div class="row justify-content-center">

        <!-- Companies Card -->
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-lg border-0 rounded-4 h-100">

                <div class="card-body text-center">

                    <div class="mb-3">
                        <div class="bg-primary bg-gradient text-white rounded-circle d-inline-flex align-items-center justify-content-center"
                             style="width:80px; height:80px; font-size:30px;">
                            <i class="bi bi-building"></i>
                        </div>
                    </div>

                    <h4 class="fw-bold">Company Management</h4>

                    <p class="text-muted">
                        Manage company details, registration information,
                        branches, and business profiles.
                    </p>

                    <a asp-controller="Company"
                       asp-action="Index"
                       class="btn btn-primary px-4 rounded-pill">
                        Access Companies
                    </a>

                </div>

            </div>
        </div>

    </div>

</div>

