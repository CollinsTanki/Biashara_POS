@model Biashara_POS.DTOs.ProductDto

@{
    ViewData["Title"] = "Create Product";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h4>Create New Product</h4>
        </div>

        <div class="card-body">
            <!-- 🔥 Add enctype for file upload -->
            <form asp-action="Create" method="post" enctype="multipart/form-data">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- PRODUCT DETAILS -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ProductName" class="form-label"></label>
                        <input asp-for="ProductName" class="form-control" />
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Barcode" class="form-label"></label>
                        <input asp-for="Barcode" class="form-control" />
                        <span asp-validation-for="Barcode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>

                <!-- FOREIGN KEYS -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="StockCategoryId" class="form-label"></label>
                        <select asp-for="StockCategoryId"
                                class="form-select"
                                asp-items="ViewBag.StockCategoryId">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="StockCategoryId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="StockSubCategoryId" class="form-label"></label>
                        <select asp-for="StockSubCategoryId"
                                class="form-select"
                                asp-items="ViewBag.StockSubCategoryId">
                            <option value="">-- Select Sub Category --</option>
                        </select>
                        <span asp-validation-for="StockSubCategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="StockMeasureId" class="form-label"></label>
                        <select asp-for="StockMeasureId"
                                class="form-select"
                                asp-items="ViewBag.StockMeasureId">
                            <option value="">-- Select Measure --</option>
                        </select>
                        <span asp-validation-for="StockMeasureId" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="VatSetupId" class="form-label"></label>
                        <select asp-for="VatSetupId"
                                class="form-select"
                                asp-items="ViewBag.VatSetupId">
                            <option value="">-- Select VAT --</option>
                        </select>
                        <span asp-validation-for="VatSetupId" class="text-danger"></span>
                    </div>
                </div>

                <!-- PRICING -->
                <div class="row mb-3">
                    <div class="col-md-4">
                        <label asp-for="BuyingPrice" class="form-label"></label>
                        <input asp-for="BuyingPrice"
                               class="form-control"
                               type="number"
                               step="0.01" />
                        <span asp-validation-for="BuyingPrice" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="SellingPrice" class="form-label"></label>
                        <input asp-for="SellingPrice"
                               class="form-control"
                               type="number"
                               step="0.01" />
                        <span asp-validation-for="SellingPrice" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="ReorderLevel" class="form-label"></label>
                        <input asp-for="ReorderLevel"
                               class="form-control"
                               type="number" />
                        <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                    </div>
                </div>

                <!-- IMAGE UPLOAD -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ImageFile" class="form-label">Product Image</label>
                        <input asp-for="ImageFile" class="form-control" type="file" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>
                </div>

                <!-- BUTTONS -->
                <div class="mt-4">
                    <button type="submit" class="btn btn-success">
                        Save Product
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        Cancel
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}