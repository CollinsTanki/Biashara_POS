@model IEnumerable<Biashara_POS.Models.Branch>

@{
    ViewData["Title"] = "Branches";
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="fw-bold">
            <i class="bi bi-diagram-3"></i> Branch Management
        </h3>

        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Branch
        </a>
    </div>

    <!-- Card -->
    <div class="card shadow-sm">
        <div class="card-body">

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    No branches have been created yet.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover align-middle">

                        <thead class="table-dark">
                            <tr>
                                <th>Branch Name</th>
                                <th>Location</th>
                                <th>Phone</th>
                                <th>Email</th>
                                <th>HQ</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var branch in Model)
                            {
                                <tr>
                                    <td class="fw-semibold">
                                        @branch.BranchName
                                    </td>

                                    <td>@branch.Location</td>
                                    <td>@branch.Phone</td>
                                    <td>@branch.Email</td>

                                    <td>
                                        @if (branch.IsHQ)
                                        {
                                            <span class="badge bg-success">Head Office</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Branch</span>
                                        }
                                    </td>

                                    <td class="text-end">
                                        <a asp-action="Edit"
                                           asp-route-id="@branch.BranchId"
                                           class="btn btn-sm btn-outline-warning">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <a asp-action="Details"
                                           asp-route-id="@branch.BranchId"
                                           class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        <a asp-action="Delete"
                                           asp-route-id="@branch.BranchId"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            }

        </div>
    </div>

</div>
